<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th scope="col" class= "text-center">Animal</th>
      <th scope="col" class= "text-center">Nombre</th>
      <th scope="col" class= "text-center">Raza</th>
      <th scope="col" class= "text-center">Fecha de nacimiento</th>
      <th scope="col" class= "text-center">Peso (kg)</th>
      <th scope="col" class= "text-center">Altura (cm)</th>
      <th scope="col" class= "text-center">Descripcion</th>
      <th scope="col" class= "text-center">Peso Maximo(cm)</th>
      <th scope="col" class= "text-center">Altura Maxima(cm)</th>
      <th scope="col" class= "text-center">Peso Promedio (kg)</th>
      <th scope="col" class= "text-center">Altura Promedio(cm)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td class= "text-center"><%= @pet.animal %></td>
        <td class= "text-center"><%= @pet.name %></td>
        <td class= "text-center"><%= @pet.breed %></td>
        <td class= "text-center"><%= @pet.birthdate %></td>
        <% if @record.present? %>
          <td class= "text-center"><%= @record.last.weight %></td>
        <% else %>
          <td class= "text-center">Sin registros</td>
        <% end %>
        <% if @record.present? %>
          <td class= "text-center"><%= @record.last.height %></td>
        <% else %>
          <td class= "text-center">Sin registros</td>
        <% end %>
        <% if @record.present? %>
          <td class= "text-center"><%= @record.last.description %></td>
        <% else %>
          <td class= "text-center">Sin registros</td>
        <% end %>
        <td class= "text-center"><%= @pet.max_weight %></td>
        <td class= "text-center"><%= @pet.max_height %></td>
        <td class= "text-center"><%= @pet.avg_weight %></td>
        <td class= "text-center"><%= @pet.avg_height %></td>
      </tr>
  </tbody>
</table>

